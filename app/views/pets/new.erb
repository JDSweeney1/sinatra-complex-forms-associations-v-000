<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]">

  <br></br>

  <%Owner.all.each do |o|%>
    <input type="checkbox" name="pet[owner_id]" value="<%=o.id%>" id="<%=o.name%>"><%=o.name%></input>
  <%end%>

  <label>and/or, create a new pet:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="pet[name]"></input>
  <br></br>

  <input type="submit" value="Create Owner">
</form>
